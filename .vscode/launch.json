{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Node: Nodemon",
      "type": "node",
      "request": "attach",
      "protocol": "inspector",
      "processId": "${command:PickProcess}",
      "restart": true,
      "port": 5858,
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
    },
  ]
}